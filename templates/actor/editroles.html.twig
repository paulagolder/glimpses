{# templates/actor/editroles.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/actor.css') }}" rel="stylesheet" />
{% endblock %}

{% block js %}
{{ parent() }}

{% endblock %}

{% block body %}
<div id="actor" >


    <div class ="heading" >
        <div class="returnbutton button1"> <a href = "/actor/showall" >return </a> </div>
        <div class="returnbutton">  <a   href = "/actor/delete/{{actor.actorid}}" >delete </a> </div>
        <div class="returnbutton">  <a   href = "/actor/edit/{{actor.actorid}}" >edit </a> </div>

        <div class="returnbutton"><a  href = "/actor/new" >Add New actor </a> </div>
    </div>
    {% dump(actor) %}
    <div class="twocols">
        <div class="actor">
            <div class="row">
                <div class="inputpair" >
                    <div class="label">ID </div>
                    <div class= "field"> {{actor.actorid}}</div>
                </div>
            </div>
            <div class="row">
                <div class="inputpair" >
                    <div class="label">name</div>
                    <div class= "field"> {{actor.name}} </div>
                </div>
                <div class="inputpair" >
                    <div class="label"> specifier </div>
                    <div class= "field"> {{actor.specifier}} </div>
                </div>
            </div>
              <div class="row">
                <div class="inputpair" >
                    <div class="label">birthdate</div>
                    {% if actor.birthdate is not null  %}
                    <div class= "field"> {{actor.Birthdate}} </div>
                    {% else %}
                       <div class= "field"> "Null"" </div>
                    {% endif %}
                </div>
                <div class="inputpair" >
                    <div class="label"> deathdate</div>
                    <div class= "field"> {{actor.deathdate}} </div>
                </div>
            </div>
            <div class="row">
                <div class="inputpair" >
                    <div class="label"> text </div>
                    <div class= "field"> {{actor.text}} </div>
                </div>
            </div>
            <div class="subheading" >
                <div class="title"> roles </div>
            </div>
                <div class="roleTable" >
        <div class="body">
            {% for pid, grole in groles %}
            <div class="row">
                <div class="returnbutton">  <a   href = "/actor/deleterole/{{actor.actorid}}/{{grole.roleref}}" >remove </a> </div>
                 <div class="returnbutton">  <a   href = "/glimpse/show/{{grole.glimpse.glimpseid}}" >view </a> </div>
                <div class="cell">
                    <div class="subheading">
                    </div>
                </div>
                <div class="cell cint" > {{grole.roleref}} </div>
                <div class="cell  cstext" > {{grole.role.role}} </div>
                <div class="cell cmtext"> {{grole.role.name}} </div>
                <div class="cell cmtext" > {{grole.glimpse.location}} </div>
                <div class="cell  cstext" > {{grole.glimpse.type}} </div>
                <div class="cell  cdate" > {{grole.glimpse.date}} </div>
                <div class="cell  cstext" > Age: {{calAge(actor.Birthdate,grole.glimpse.date)}} </div>
            </div>
            {% endfor %}
        </div>
    </div>
        </div>
        </div>
        <div class= "xroles">
          <div class="subheading" >
                <div class="title">  candidate roles </div>
            </div>
            {% for pid, xrole in xroles %}
            <div class= "xrole row">
                 <div class="returnbutton">  <a   href = "/actor/addrole/{{actor.actorid}}/{{xrole.roleid}}" >Add </a> </div>
                 <div class="returnbutton" >  <a  href = "/glimpse/show/{{xrole.glimpseref}}" >View </a> </div>
                 <div class= "cell cstext"> {{xrole.glimpse.type}}</div>
                 <div class= "cell cdate"> {{xrole.glimpse.date}}</div>
                 <div class= "cell cmtext"> {{xrole.glimpse.location}}</div>
                <div class= "cell cmtext"> {{xrole.role}}</div>
                <div class= "cell cmtext"> {{xrole.name}}</div>
                <div class= "cell cltext"> {{xrole.predicates}}</div>
                    <div class="cell  cstext" > Age: {{calAge(actor.Birthdate,xrole.glimpse.date)}} </div>
            </div>
            {% endfor %}
        </div>
    </div>


</div>
</div>
</div>
{% endblock %}




